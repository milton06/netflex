{% extends 'base.html.twig' %}

{% block body %}
    <h1>Addresses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Isprimary</th>
                <th>Addressline1</th>
                <th>Addressline2</th>
                <th>Zipcode</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td><a href="{{ path('_show', { 'id': address.id }) }}">{{ address.id }}</a></td>
                <td>{% if address.isPrimary %}Yes{% else %}No{% endif %}</td>
                <td>{{ address.addressLine1 }}</td>
                <td>{{ address.addressLine2 }}</td>
                <td>{{ address.zipCode }}</td>
                <td>{% if address.status %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('_show', { 'id': address.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': address.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_new') }}">Create a new address</a>
        </li>
    </ul>
{% endblock %}
