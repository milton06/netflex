{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Midname</th>
                <th>Lastname</th>
                <th>Status</th>
                <th>Createdon</th>
                <th>Createdby</th>
                <th>Lastmodifiedon</th>
                <th>Lastmodifiedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.midName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.status }}</td>
                <td>{% if user.createdOn %}{{ user.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.createdBy }}</td>
                <td>{% if user.lastModifiedOn %}{{ user.lastModifiedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.lastModifiedBy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
