{% extends 'base.html.twig' %}

{% block body %}
    <h1>Item</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Itemdescription</th>
                <td>{{ item.itemDescription }}</td>
            </tr>
            <tr>
                <th>Itembaseweight</th>
                <td>{{ item.itemBaseWeight }}</td>
            </tr>
            <tr>
                <th>Itemaccountableextraweight</th>
                <td>{{ item.itemAccountableExtraWeight }}</td>
            </tr>
            <tr>
                <th>Itemvolumetricbaseweight</th>
                <td>{{ item.itemVolumetricBaseWeight }}</td>
            </tr>
            <tr>
                <th>Itemvolumetricaccountableextraweight</th>
                <td>{{ item.itemVolumetricAccountableExtraWeight }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('item_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('item_edit', { 'id': item.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
